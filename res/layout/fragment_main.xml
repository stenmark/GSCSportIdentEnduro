<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/start_screen_fragment"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    tools:context="se.gsc.stenmark.gscenduro.MainActivity$PlaceholderFragment"
    android:scrollbars="vertical"  
    android:layout_weight="1"
    >
   
    <LinearLayout 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_marginTop="8dp"
		android:layout_marginBottom="8dp"
		android:layout_marginLeft="8dp"
		android:layout_marginRight="8dp"			
		>    
        
		<TextView
		   android:layout_width="fill_parent"
		   android:layout_height="wrap_content"
		   android:textSize="16sp"
		   android:text="@string/start_connection_status"
		   android:textStyle="bold"
		   android:layout_weight="1"		
		   android:padding="4dp"
		   android:textColor="@color/white"		
		   android:background="@color/black"   	        
		   />          
        
		<LinearLayout 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_weight="1"		
			android:padding="4dp"		
			>    
			
		     <TextView
		        android:id="@+id/statusText"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="16sp"
		        android:text="Not Connected"        
		        />  
		        
			<Button
			    android:id="@+id/connectButton"
	    		android:layout_width="wrap_content"
	    		android:layout_height="40dp"
	    		android:layout_margin="8dp"			    
			    android:layout_gravity="center_vertical|right"
	    		android:textSize="16sp"
	    		android:textStyle="bold"
	    		android:text="@string/start_connect"
    			android:textColor="@color/button_text"   
    			android:background="@drawable/button"	    		 	    	
	    	/>		    
		</LinearLayout>
				
		<TextView
		   android:layout_width="fill_parent"
		   android:layout_height="wrap_content"
		   android:textSize="16sp"
		   android:text="@string/start_competitor"
		   android:textStyle="bold"
		   android:layout_weight="1"
		   android:padding="4dp"
		   android:textColor="@color/white"		
		   android:background="@color/black" 	        
		   /> 		
		   
		<LinearLayout 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_weight="1"
			android:padding="4dp"
			>    
			
			<LinearLayout 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"	
				> 		    
		    
				<LinearLayout 
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					> 		    
					<TextView
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:textSize="16sp"
				        android:text="@string/start_name"/>         
				        
				    <EditText
				        android:id="@+id/editCompetitorName"
				        android:layout_width="fill_parent"
				        android:layout_height="wrap_content"
				        android:inputType="textPersonName"
				        android:textSize="16sp"/>
				</LinearLayout>
					
				<LinearLayout 
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					> 	
				    <TextView
				        android:id="@+id/textCardNumber"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:textSize="16sp"
				        android:text="@string/start_card_number"/>     
				    
				     <EditText
				         android:id="@+id/editCardNumber"
				         android:layout_width="fill_parent"
				         android:layout_height="wrap_content"
				         android:inputType="number"
				         android:textSize="16sp"/>    
			    </LinearLayout>
		    </LinearLayout>
		    
			<Button
			    android:id="@+id/addCompetitorButton"
	    		android:layout_width="wrap_content"
	    		android:layout_height="40dp"
	    		android:layout_margin="8dp"			    
			    android:layout_gravity="center_vertical|right"
	    		android:textSize="16sp"
	    		android:textStyle="bold"
	    		android:text="@string/start_add"
    			android:textColor="@color/button_text"   
    			android:background="@drawable/button"		 	    	
	    	/>		
	    </LinearLayout>
	   
		
		<TextView
		   android:layout_width="fill_parent"
		   android:layout_height="wrap_content"
		   android:textSize="16sp"
		   android:text="@string/start_multicompetitor"
		   android:textStyle="bold"
		   android:layout_weight="1"
		   android:padding="4dp"
		   android:textColor="@color/white"		
		   android:background="@color/black" 		        
		   /> 	
		   		
		<LinearLayout 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_weight="1"
			android:padding="4dp"
			>   			
			<Button
			    android:id="@+id/addMultiCompetitorButton"
	    		android:layout_width="wrap_content"
	    		android:layout_height="40dp"
	    		android:layout_margin="8dp"			    
			    android:layout_gravity="center_vertical|right"
	    		android:textSize="16sp"
	    		android:textStyle="bold"
	    		android:text="@string/start_add"
	    		android:textColor="@color/button_text"   
    			android:background="@drawable/button"	
	    	/>				
		</LinearLayout>		
		
		<TextView
		   android:layout_width="fill_parent"
		   android:layout_height="wrap_content"
		   android:textSize="16sp"
		   android:text="@string/start_track"
		   android:textStyle="bold"
		   android:layout_weight="1"
		   android:padding="4dp"
		   android:textColor="@color/white"		
		   android:background="@color/black" 		        
		   /> 			
		
		<LinearLayout 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_weight="1"
			android:padding="4dp"
			>    
			
		   	<LinearLayout 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"				
				> 
			   	<TextView
		        	android:id="@+id/addTrackInfo"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:textSize="16sp"
		        	android:text="@string/start_add_stages_info" />					    
			    
    			<Spinner
        			android:id="@+id/spinnerTrackDefinition"
        			android:layout_width="fill_parent"
        			android:layout_height="wrap_content"
        			android:prompt="@string/start_add_stages_info"
    			/>			    
			    
			</LinearLayout>
			
			<TextView
		        android:id="@+id/trackInfoTextView"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="8sp"
		        android:text="@string/start_track_info" />	
		        
			<Button
			    android:id="@+id/addTrackButton"
	    		android:layout_width="wrap_content"
	    		android:layout_height="40dp"
	    		android:layout_margin="8dp"			    
			    android:layout_gravity="center_vertical|right"
	    		android:textSize="16sp"
	    		android:textStyle="bold"
	    		android:text="@string/start_add"
	    		android:textColor="@color/button_text"   
	    		android:background="@drawable/button"	/>
		</LinearLayout>								
				
		<TextView
		   android:layout_width="fill_parent"
		   android:layout_height="wrap_content"
		   android:textSize="16sp"
		   android:text="@string/start_competition"
		   android:textStyle="bold"
		   android:layout_weight="1"	
		   android:padding="4dp"
		   android:textColor="@color/white"		
		   android:background="@color/black"        
		   /> 			
		
		<LinearLayout 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_weight="1"
			android:padding="4dp"
			>   	    	    

			<LinearLayout 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				> 			    
				<TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center_vertical|right"
			        android:textSize="16sp"
			        android:text="@string/start_name"/>   
			    
			    <EditText
	        		android:id="@+id/editSaveLoadComp"
	        		android:layout_width="fill_parent"
	        		android:layout_height="wrap_content"
	        		android:inputType="textPersonName"
	        		android:layout_gravity="center_vertical|right"
			        android:textSize="16sp"/>
			</LinearLayout>
					    
		   	<LinearLayout 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_gravity="right"
				>  
		    
				<Button
				    android:id="@+id/newCompButton"
		    		android:layout_width="wrap_content"
		    		android:layout_height="40dp"
		    		android:layout_margin="8dp"
				    android:layout_gravity="center_vertical"
		    		android:textSize="16sp"
		    		android:textStyle="bold"
		    		android:text="@string/start_new"
		    		android:textColor="@color/button_text"   
    				android:background="@drawable/button"	/>			    
			    
				<Button
				    android:id="@+id/saveButton"
		    		android:layout_width="wrap_content"
		    		android:layout_height="40dp"
		    		android:layout_margin="8dp"
				    android:layout_gravity="center_vertical"
		    		android:textSize="16sp"
		    		android:textStyle="bold"
		    		android:text="@string/start_save"
		    		android:textColor="@color/button_text"   
    				android:background="@drawable/button"	/>		
		    		
				<Button
				    android:id="@+id/loadButton"
		    		android:layout_width="wrap_content"
		    		android:layout_height="40dp"
		    		android:layout_margin="8dp"
				    android:layout_gravity="center_vertical"
		    		android:textSize="16sp"
		    		android:textStyle="bold"
		    		android:text="@string/start_load"
		    		android:textColor="@color/button_text"   
    				android:background="@drawable/button"/>		
		    		
				<Button
				    android:id="@+id/listLoadedButton"
		    		android:layout_width="wrap_content"
		    		android:layout_height="40dp"
		    		android:layout_margin="8dp"
				    android:layout_gravity="center_vertical"
		    		android:textSize="16sp"
		    		android:textStyle="bold"
		    		android:text="@string/start_list"
		    		android:textColor="@color/button_text"   
    				android:background="@drawable/button"/>					
			</LinearLayout>		    
		</LinearLayout>
		
		<TextView
		   android:layout_width="fill_parent"
		   android:layout_height="wrap_content"
		   android:textSize="16sp"
		   android:text="@string/start_points_table"
		   android:textStyle="bold"
		   android:layout_weight="1"	
		   android:padding="4dp"
		   android:textColor="@color/white"		
		   android:background="@color/black"         
		   /> 	
		   		
		<LinearLayout 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_weight="1"
			android:padding="4dp"
			>   		
			<Button
			    android:id="@+id/addPointsTableButton"
		   		android:layout_width="wrap_content"
		   		android:layout_height="40dp"
		   		android:layout_margin="8dp"
			    android:layout_gravity="center_vertical|right"
		   		android:textSize="16sp"
		   		android:textStyle="bold"
		   		android:text="@string/start_add"
		   		android:textColor="@color/button_text"   
	    		android:background="@drawable/button"/>				
		</LinearLayout>				
		
		<View
		    android:layout_marginTop="12dp"
		    android:layout_marginBottom="12dp"
		    android:layout_width="fill_parent"
		    android:layout_height="1dp"
		    android:background="@android:color/darker_gray"/>							
		
	    <ScrollView 
	        android:id="@+id/scrollViewMain"
	     	android:visibility="visible" 
	     	android:layout_height="wrap_content" 
	     	android:layout_width="wrap_content"
	     	android:keepScreenOn="true" 	     	
	     	android:scrollbars="vertical" > 
		    <TextView
		        android:id="@+id/cardInfoTextView"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="No cards read yet" />
	    
	    </ScrollView>		
	    
		<View
		    android:layout_marginTop="12dp"
		    android:layout_marginBottom="12dp"
		    android:layout_width="fill_parent"
		    android:layout_height="1dp"
		    android:background="@android:color/darker_gray"/>
   	</LinearLayout>      
</ScrollView>